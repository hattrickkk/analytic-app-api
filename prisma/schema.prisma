generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas  = ["public", "reference"] // все схемы, которые используются
}

model User {
  id        Int      @id @default(autoincrement())
  email     String?   @unique
  username      String @unique
  password  String

  isAdmin Boolean?

  teacherId Int?      @unique            
  teacher   Teacher? @relation("UserTeacher", fields: [teacherId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") 
  @@schema("reference") 
}

model Position {
  id       Int       @id @default(autoincrement())
  name     String     @unique    
  code     String?     
  teachers Teacher[]

  WorkNorms WorkNorm[]

  @@map("positions")
  @@schema("reference")
}


model Teacher {
  id         Int        @id @default(autoincrement())
  firstName   String
  lastName String
  patronymic String

  positionId Int
  position   Position   @relation(fields: [positionId], references: [id])

  user       User?      @relation("UserTeacher")

  rate       Float      @default(1.0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  workloads WorkLoad[]
  workloadPlans WorkloadPlan[]

  @@map("teachers")
  @@schema("reference")
}

model WorkLoadType {
  id        Int        @id @default(autoincrement())
  name      String     @unique

  workloads WorkLoad[]
  workNorms WorkNorm[]
  
  @@map("workload_types")
  @@schema("reference")
}

model WorkLoad {
  id        Int          @id @default(autoincrement())

  teacherId Int
  teacher   Teacher      @relation(fields: [teacherId], references: [id])

  typeId    Int
  type      WorkLoadType @relation(fields: [typeId], references: [id])

  subjectId    Int
  subject      Subject @relation(fields: [subjectId], references: [id])

  hours     Float

  year String

  @@map("workloads")
  @@schema("public")
}

model Subject {
  id        Int          @id @default(autoincrement())

  name String @unique
  hours     Float

  workloads WorkLoad[]

  @@map("subjects")
  @@schema("reference")
}

model WorkNorm {
  id           Int          @id @default(autoincrement())
  typeId       Int
  type         WorkLoadType @relation(fields: [typeId], references: [id])

  year         String
  rate         Float
  hours        Float

  positionId   Int?
  position     Position?    @relation(fields: [positionId], references: [id])

  @@unique([typeId, year, rate, positionId])
  @@map("work_norms")
  @@schema("reference")
}

model WorkloadPlan {
  id         Int      @id @default(autoincrement())
  teacherId  Int
  teacher    Teacher  @relation(fields: [teacherId], references: [id])

  year       String
  plannedHours Float

  @@map("workload_plans")
  @@schema("public")
}